package com.bridgelabz.Fundoo.services;

import javax.servlet.http.HttpServletRequest;

import com.bridgelabz.Fundoo.dto.ForgetPasswordDto;
import com.bridgelabz.Fundoo.dto.LoginDto;
import com.bridgelabz.Fundoo.dto.RegisterDto;
import com.bridgelabz.Fundoo.dto.ResetPasswordDto;
import com.bridgelabz.Fundoo.result.Status;


public interface ServiceInterface {
	
	public Status Registration(RegisterDto register, HttpServletRequest request);

	public Status verifyUser(String token, HttpServletRequest request);

	public Status Login(LoginDto login, HttpServletRequest request);

	public Status forgetPassword(ForgetPasswordDto forgetdto, HttpServletRequest request);

	public Status resetPassword(String token, ResetPasswordDto setpasswordDto, HttpServletRequest request);

}
